<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#DDBA51"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tv_lpoint"
        android:layout_width="105dp"
        android:layout_height="72dp"
        android:layout_marginStart="153dp"
        android:layout_marginTop="36dp"
        android:layout_marginEnd="153dp"
        android:text="1.12"
        android:textSize="48sp"
        app:layout_constraintBottom_toTopOf="@+id/btn_init"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_last" />

    <TextView
        android:id="@+id/tv_last"
        android:layout_width="169dp"
        android:layout_height="80dp"
        android:layout_marginStart="121dp"
        android:layout_marginTop="200dp"
        android:layout_marginEnd="121dp"
        android:text="참가자1"
        android:textSize="50sp"
        app:layout_constraintBottom_toTopOf="@+id/tv_lpoint"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="90dp"
        android:layout_height="78dp"
        android:layout_marginStart="160dp"
        android:layout_marginTop="108dp"
        android:layout_marginEnd="161dp"
        android:layout_marginBottom="25dp"
        android:text="꼴찌"
        android:textSize="48sp"
        app:layout_constraintBottom_toTopOf="@+id/tv_last"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_init"
        android:layout_width="168dp"
        android:layout_height="76dp"
        android:layout_marginStart="122dp"
        android:layout_marginTop="61dp"
        android:layout_marginEnd="121dp"
        android:layout_marginBottom="164dp"
        android:backgroundTint="#91D146"
        android:text="처음으로"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_lpoint" />


</androidx.constraintlayout.widget.ConstraintLayout>



